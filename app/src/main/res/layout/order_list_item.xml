<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/order_detail_list_layout"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text="Order Number #983736"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="normal"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/ordrNumber_item_tv"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="horizontal"
            >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="NZD $100"
            android:textColor="@color/green"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:id="@+id/totol_order_list_item"
            />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:foregroundGravity="center"
                android:src="@drawable/baseline_expand_more_white_18dp"
                android:id="@+id/expand_more_button"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:layout_below="@id/order_detail_list_layout"
        android:id="@+id/item_detail_list_layout"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="Blue jeans
glasse
Black boots"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:id="@+id/items_of_order_tv"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:src="@drawable/baseline_expand_less_white_18dp"
            android:id="@+id/expand_less_button"
            />
    </LinearLayout>



</RelativeLayout>